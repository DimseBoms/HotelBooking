<div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
</div>
<div>
  <%= link_to "Hotels", hotels_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
</div>
<div class="flex flex-col items-center mx-auto space-y-2">
  <h1 class="font-bold text-2xl">Find a Hotel Room</h1>
  <form action="/search_results" method="get" class="flex flex-col space-y-2">
    <div class="flex flex-col">
      <label for="city">City</label>
      <input type="text" id="city" name="city">
    </div>
    <div class="flex flex-col">
      <label for="arrival_date">Arrival Date</label>
      <input type="date" id="arrival_date" name="arrival_date" value="<%= Date.today %>">
    </div>
    <div class="flex flex-col">
      <label for="departure_date">Departure Date</label>
      <input type="date" id="departure_date" name="departure_date" value="<%= Date.today + 7 %>">
    </div>
    <div class="flex flex-col">
      <label for="no_of_rooms">Number of Rooms</label>
      <input type="number" id="no_of_rooms" name="no_of_rooms" value="1">
    </div>
    <div class="flex flex-col">
      <label for="max_price">Max price</label>
      <input type="number" id="max_price" name="max_price" value="1000">
    </div>
    <div class="flex flex-col bg-blue-600 rounded-lg text-white">
      <input type="submit" value="Search" class="px-3 py-3 cursor-pointer">
    </div>
  </form>
</div>
